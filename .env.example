# System Monitor App - Environment Variables

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///system_monitor.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/system_monitor

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for alerts)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Twilio Configuration# Twilio SMS Alerts (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#monitoring
SLACK_USERNAME=System Monitor Bot

# Monitoring Settings
METRIC_COLLECTION_INTERVAL=60
ALERT_CHECK_INTERVAL=60
DATA_RETENTION_DAYS=30

# Initial Admin User (for Docker/K8s deployment)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
